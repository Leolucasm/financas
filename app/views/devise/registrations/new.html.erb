<div class="card card-primary">
  <div class="card-header"><h4><%= t('devise.actions.sign_up') %></h4></div>

  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", required: "true", tabindex: "1" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: "true", tabindex: "2" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= "#{@minimum_password_length} #{t('errors.messages.characters_minimum')}" %>)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: "true", tabindex: "3" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: "true", tabindex: "4" %>
      </div>

      <div class="form-group">
        <%= f.submit t('devise.actions.sign_up'), class:"btn btn-primary btn-lg btn-block", tabindex:"5" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
