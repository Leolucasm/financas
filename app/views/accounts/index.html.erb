<div class="section-header">
  <h1><%= Account.model_name.human(count: @accounts.size)  %></h1>
  <!-- Breadcrumb -->
  <div class="section-header-breadcrumb">
    <%= @teste %>
  </div>
</div>

<div class="section-body">

  <%= link_to t('buttons.new'), new_account_path, class: 'btn btn-primary', style: "margin-bottom: 25px;", data: { modal: true } %>

  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-striped table-md">
          <thead>
            <tr>
              <th><%= Account.human_attribute_name :description %></th>
              <th><%= Account.human_attribute_name :balance %></th>
              <th><%= Account.human_attribute_name :active %></th>
              <th colspan="2">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @accounts.each do |account| %>
              <tr>
                <td><%= account.description %></td>
                <td><%= currencyf(account.balance) %></td>
                <td><%= get_label_active(account.active) %></td>
                <td style="width:50px;">
                  <%= link_to edit_account_path(account), data: { modal: true } do %>
                    <i class="far fa-edit" style="font-size: 16px !important;"></i>
                  <% end %>
                </td>
                <td style="width:50px;">
                  <%= link_to account, method: :delete, data: { confirm: t('messages.confirm_destroy')} do %>
                    <i class="far fa-trash-alt" style="font-size: 16px !important;"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
